{
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "npm-run-all -p dev:client dev:server",
    "dev:client": "npm --workspace client run dev",
    "dev:server": "npm --workspace server run dev",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "pnpm -r run typecheck",
    "test": "npm-run-all -p test:client test:server",
    "test:client": "npm --workspace client run test",
    "test:integration": "npm --workspace server run test:integration",
    "test:unit": "npm --workspace server run test:unit",
    "write file test coverage": "npm --workspace server run write-file-coverage",
    "test:server": "npm --workspace server run test",
    "docs": "jsdoc -c jsdoc.conf.json",
    "docs:serve": "jsdoc -c jsdoc.conf.json && http-server docs/jsdoc -p 8080"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  }
}
