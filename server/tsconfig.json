{
  "files": [],
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist/types",
    "emitDeclarationOnly": false,
    "rootDir": "src",
    "composite": false,
    "noEmitOnError": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "paths": {
      "@server/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "build", "**/*.spec.ts", "**/*.test.ts", "src/test/**"]
}
