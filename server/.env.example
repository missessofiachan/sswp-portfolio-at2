# Server env
PORT=4000
# Minimum 10 characters
JWT_SECRET=change-me-please-12345
JWT_EXPIRES_IN=15m
DATA_STORE=firestore # or 'memory' for local demo/testing
CORS_ORIGIN=http://localhost:5173
UPLOAD_MAX_MB=5

# Option A: point to a service account key file (recommended for local dev)
FIREBASE_CREDENTIALS_FILE=../test1-795d3-firebase-adminsdk-fbsvc-f8f926dfa7.json

# Option B: raw fields (uncomment and fill if you prefer env vars)
# FIREBASE_PROJECT_ID=
# FIREBASE_CLIENT_EMAIL=
# FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Cloudinary
CLOUDINARY_URL=cloudinary://<key>:<secret>@<cloud>
# Optional folder prefix to help keep assets separated per environment
CLOUDINARY_UPLOAD_FOLDER=portfolio-assets

# Auth + password reset controls
PASSWORD_RESET_TTL_MINUTES=60
PASSWORD_RESET_RATE_LIMIT_MINUTES=5

# Logging
LOG_TO_FILE=true
LOG_DIR=logs
LOG_FILE=app.log
LOG_LEVEL=debug
LOG_MAX_SIZE=5242880
LOG_MAX_FILES=5

# Uncomment to require a shared secret for maintenance routes
# MAINTENANCE_SECRET=change-me
