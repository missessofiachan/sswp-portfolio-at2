{
  "files": [],
  "references": [{ "path": "./tsconfig.app.json" }, { "path": "./tsconfig.node.json" }],

  "compilerOptions": {
    /* Output */
    "outDir": "./dist",

    /* Declarations */
    "declaration": true,
    "emitDeclarationOnly": false,

    /* Root source */
    "rootDir": "./src",

    /* Project build */
    "composite": true,

    /* React JSX transform (for React 17+) */
    "jsx": "react-jsx",

    /* Types */
    "types": ["vite/client", "vitest/globals"],

    /* Module resolution */
    "baseUrl": ".",
    "paths": {
      "@client/*": ["src/*"]
    },

    /* Recommended strictness */
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },

  "include": ["src", "vite-env.d.ts", "types/**/*.d.ts"],
  "exclude": ["node_modules", "dist", "build", "**/*.spec.ts", "**/*.test.ts", "dist/types"]
}
